unit UCalculadoraService;

interface

type
  TCaluladoraService = class
    private
    public
     function Somar(aNum1, aNum2: Double): Double;
     function Subtrair(aNum1,aNum2: Double): Double;
     function Multiplicar(aNum1, aNum2: Double): Double;
     function Dividir(aNum1, aNum2 : Double): Double;
  end;

implementation

{ TCaluladoraService }

function TCaluladoraService.Dividir(aNum1, aNum2: Double): Double;
begin
  Dividir := aNum1 / aNum2;
end;

function TCaluladoraService.Multiplicar(aNum1, aNum2: Double): Double;
begin
  Multiplicar := aNum1 * aNum2;
end;

function TCaluladoraService.Somar(aNum1, aNum2: Double): Double;
begin
  Somar := aNum1 + aNum2;
end;

function TCaluladoraService.Subtrair(aNum1, aNum2: Double): Double;
begin
  Subtrair := aNum1 - aNum2;
end;

end.
